    <script>
        class SoundEffectsApp {
            constructor() {
                this.sounds = new Map();
                this.audioContext = null;
                this.greetings = [
                    'Hello, Cecil',
                    'Welcome Back, Cecil',
                    'Back so soon?',
                    'Hey freak',
                    'Does this count as bullying?',
                    'Hello, Cecil Bootycheeks',
                    'Hello, Cecil Stinkybreath',
                    'Greetings, Becil',
                    'Howdy, Cecil Pecil!',
                    'Seasalt!',
                ];
                this.init();
            }

            async init() {
                // Initialize audio context on first user interaction
                document.addEventListener('click', this.initAudioContext.bind(this), { once: true });
                
                this.setRandomGreeting();
                this.setupEventListeners();
                this.loadDefaultSounds();
                this.loadStoredSounds();
            }

            setRandomGreeting() {
                const titleElement = document.getElementById('appTitle');
                const randomGreeting = this.greetings[Math.floor(Math.random() * this.greetings.length)];
                titleElement.textContent = randomGreeting;
            }

            async initAudioContext() {
                try {
                    this.audioContext = new (window.AudioContext || window.webkitAudioContext)();
                } catch (error) {
                    console.warn('Audio context not supported');
                }
            }

            setupEventListeners() {
                const fileInput = document.getElementById('audioFile');
                const addButton = document.getElementById('addSound');
                const soundNameInput = document.getElementById('soundName');

                fileInput.addEventListener('change', this.handleFileSelect.bind(this));
                addButton.addEventListener('click', this.addCustomSound.bind(this));
                soundNameInput.addEventListener('keypress', (e) => {
                    if (e.key === 'Enter') {
                        this.addCustomSound();
                    }
                });
            }

            loadDefaultSounds() {
                // These are placeholder URLs - you'll replace these with your actual sound files
                const defaultSounds = [
                    { name: 'ðŸ”” Bell', url: 'data:audio/wav;base64,' },
                    { name: 'ðŸš¨ Alarm', url: 'data:audio/wav;base64,' }
                ];

                defaultSounds.forEach(sound => {
                    this.createSoundButton(sound.name, sound.url);
                });
            }

            loadStoredSounds() {
                // In a real app, you might load from localStorage or a database
                // For now, this is just a placeholder for saved custom sounds
            }

            handleFileSelect(event) {
                const file = event.target.files[0];
                if (file && file.type.startsWith('audio/')) {
                    const reader = new FileReader();
                    reader.onload = (e) => {
                        const audioData = e.target.result;
                        const soundName = document.getElementById('soundName').value || file.name;
                        this.sounds.set(soundName, audioData);
                        console.log('Audio file loaded:', soundName);
                    };
                    reader.readAsDataURL(file);
                } else {
                    alert('Please select a valid audio file');
                }
            }

            addCustomSound() {
                const fileInput = document.getElementById('audioFile');
                const soundNameInput = document.getElementById('soundName');
                const soundName = soundNameInput.value.trim();

                if (!fileInput.files[0]) {
                    alert('Please select an audio file first');
                    return;
                }

                if (!soundName) {
                    alert('Please enter a name for the sound');
                    return;
                }

                const file = fileInput.files[0];
                const reader = new FileReader();
                
                reader.onload = (e) => {
                    const audioData = e.target.result;
                    this.createSoundButton(soundName, audioData);
                    
                    // Clear inputs
                    fileInput.value = '';
                    soundNameInput.value = '';
                };
                
                reader.readAsDataURL(file);
            }

            createSoundButton(name, audioUrl) {
                const soundGrid = document.getElementById('soundGrid');
                const button = document.createElement('button');
                
                button.className = 'sound-button';
                button.textContent = name;
                button.addEventListener('click', () => this.playSound(audioUrl, button));
                
                soundGrid.appendChild(button);
            }

            async playSound(audioUrl, buttonElement) {
                try {
                    // Add visual feedback
                    buttonElement.classList.add('playing');
                    setTimeout(() => {
                        buttonElement.classList.remove('playing');
                    }, 600);

                    // Create and play audio
                    const audio = new Audio(audioUrl);
                    audio.volume = 0.7;
                    
                    // Handle mobile audio restrictions
                    const playPromise = audio.play();
                    
                    if (playPromise !== undefined) {
                        await playPromise;
                    }
                } catch (error) {
                    console.warn('Could not play audio:', error);
                    // Fallback for cases where audio doesn't play
                    this.vibrate();
                }
            }

            vibrate() {
                // Provide haptic feedback on mobile devices
                if ('vibrate' in navigator) {
                    navigator.vibrate(50);
                }
            }
        }

        // Initialize the app when the page loads
        document.addEventListener('DOMContentLoaded', () => {
            new SoundEffectsApp();
        });
    </script>
</body>
</html>
